/ Main Content
#hmpg
  #content{:role => "main"}
    %section#promo.section.alt.hmpg-spotlight
      .container
        .span6
          .hero-unit
            %h1 Join the Maker Community
            %p.dosis5 Apprenticeships for girls, by girls.
            .socials
              .fb-like{"data-colorscheme" => "dark", "data-href" => "http://www.facebook.com/GirlsGuild", "data-layout" => "button_count", "data-send" => "false", "data-show-faces" => "false", "data-width" => "450", :style => "margin:5px 5px 0 10px;"}
              %div{:style => "margin:9px;"}
                %a.twitter-follow-button{"data-lang" => "en", "data-show-count" => "false", :href => "https://twitter.com/TheGirlsGuild"} Follow @TheGirlsGuild

    %section.section#goals
      .container
        .row-fluid
          .span4
            .row-fluid
              %ul.pull-center.valueprop
                %h2
                  = link_to "Learn", get_involved_girls_path
                %li Work with Amazing Makers
                %li Learn a Technique
                %li Build a Portfolio
                %li Understand Small Business
                %li
                  = link_to "Start Learning »", get_involved_girls_path, class: "btn btn-mini btn-primary"

          .span4.calloutbubble
            .row-fluid
              .well
                %ul.pull-center
                  %h3
                    %img.left{:src => "/assets/arrow-left.png"}/
                    Learn skills & tools
                    %br
                    or teach your craft
                    %img.right{:src => "/assets/arrow-right.png"}/
                    %br
                    in
                    %a{:href => "/workshops"} workshops
                    \&
                    %a{:href => "/apprenticeships"} apprenticeships
                    %br
                    .kristi
                      for girls of all ages!

          .span4
            .row-fluid
              %ul.pull-center.valueprop
                %h2
                  = link_to "Lead", get_involved_makers_path
                %li Share your Skills
                %li Expand Production
                %li Build your Network
                %li Collaborate & Learn Together
                %li
                  = link_to "Get Involved as a maker »", get_involved_makers_path, class: "btn btn-mini btn-primary"

    %section.section#newsletter
      .container
        .row-fluid
          / Modal
          #myModal.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
            .modal-header
              %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
              %h3#myModalLabel Sign Up!
            .modal-body
              / Begin MailChimp Signup Form
              #mc_embed_signup
                %form#mc-embedded-subscribe-form.validate.input-append.bttn-newsletter{:action => "http://girlsguild.us4.list-manage.com/subscribe/post?u=9f2de43ebd5f4d79e3d803fb9&id=aea5bd62bf", :method => "post", :name => "mc-embedded-subscribe-form", :novalidate => ""}
                  %label{:for => "mce-EMAIL"} For our rad monthly newsletters!
                  %input#mce-EMAIL.span5.email{:name => "EMAIL", :placeholder => "Your Email", :required => "", :type => "email"}/
                  %button#mc-embedded-subscribe.btn.btn-primary.button{:name => "subscribe", :type => "submit", :value => "Subscribe"} Sign up
              / End mc_embed_signup
            .modal-footer
              %a{"aria-hidden" => "true", "data-dismiss" => "modal"} I'll do this later

          / Newsletter Modal load
          :javascript
            $(window).load(function(){
             if ($.cookie('#myModal') != 'shown')
            {
              $.cookie('#myModal', 'shown');
                $('#myModal').modal('show');
            }
            });

          .span6.getfirstdibs
            %p get first dibs!
          .span6.signup
            %form#mc-embedded-subscribe-form.validate.input-append.bttn-newsletter{:action => "http://girlsguild.us4.list-manage.com/subscribe/post?u=9f2de43ebd5f4d79e3d803fb9&id=aea5bd62bf", :method => "post", :name => "mc-embedded-subscribe-form", :novalidate => "", :target => "_blank"}
              %input#mce-EMAIL.span6.email{:name => "EMAIL", :placeholder => "Your Email", :required => "", :type => "email"}/
              %button#mc-embedded-subscribe.btn.btn-primary.button{:name => "subscribe", :type => "submit", :value => "Subscribe"} Sign up for our Newsletter!
          %br


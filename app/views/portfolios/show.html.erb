<p id="notice"><%= notice %></p>

<div id="artworks">
  <% @portfolio.artworks.each do |artwork| %>
    <div class="artwork">
      <%= image_tag artwork.image_url.to_s %>
      <div class="name"><%= artwork.title %></div>
      <div class="actions">
        <%= link_to "edit", edit_artwork_path(artwork) %> |
        <%= link_to "remove", artwork, :confirm => 'Are you sure?', :method => :delete %>
      </div>
    </div>
  <% end %>
  <div class="clear"></div>
</div>

<p>
<%= link_to "Add artwork", new_artwork_path(:portfolio_id => @portfolio) %>
<%= link_to 'Edit', edit_portfolio_path(@portfolio) %> |
<%= link_to 'Back', portfolios_path %>
</p>
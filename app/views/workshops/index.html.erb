<%= content_tag :section, :class => "section" do %>
	<%= content_tag :div, :class => "container" do %>
		<%= link_to "Offer a Workshop", new_workshop_path, :class => 'btn btn-large btn-primary' %>

		<% unless @saved_workshops.blank? %>
		<h3>My Saved Workshops</h3>
		<%= render :partial => "workshop", :collection => @saved_workshops %>
		<% end %>

		<% if current_user.admin? %>
			<% unless @savedadmin_workshops.blank? %>
				<h3>Workshops in Progress</h3>
				<p>These workshops have not been submitted yet! This list just lets us see what's in the works.</p>
				<%= render :partial => "workshop", :collection => @savedadmin_workshops %>
			<% end %>
		<% end %>		

		<% unless @pending_workshops.blank? %>
		<h3>My Pending Workshops</h3>
		<%= render :partial => "workshop", :collection => @pending_workshops %>
		<% end %>

		<% if current_user.admin? %>
			<% unless @pendingadmin_workshops.blank? %>
				<h3>Pending Workshops</h3>
				<p>These workshops need review!</p>
				<%= render :partial => "workshop", :collection => @pendingadmin_workshops %>
			<% end %>
		<% end %>		

		<% unless @active_workshops.blank? %>
		<h3>My Upcoming Workshops</h3>
		<%= render :partial => "workshop", :collection => @active_workshops %>
		<% end %>

		<hr />

		<% unless @workshops.blank? %>
		<h3>All Workshops</h3>
		<%= render :partial => "workshop", :collection => @workshops %>
		<% end %>
	<% end %>
<% end %>
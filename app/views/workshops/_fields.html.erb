<%= render 'shared/error_messages', :form_model => @workshop %>
<div class="accordion form-horizontal" id="accordion2">
	<div class="accordion-group">
	  <div class="accordion-heading">
	  	<h2>
				<a class="accordion-toggle" data-toggle="collapse" href="#collapseOne">
		      1. About Me
		    </a>
		  </h2>
	  </div>

	  <div id="collapseOne" class="accordion-body collapse" style="height: 0px; ">
	    <div class="accordion-inner">
	      <!--<p>We’ll post this with your workshop listing to show people who they’ll be working with.</p>-->

<!--THE BASICS -->
      	<h3>The Basics</h3>

				<%= f.input :host_firstname, 	label: 'First Name',
																			input_html: { value: ( !current_user.admin? ? current_user.first_name : '' ) }  %>
				<%= f.input :host_lastname, 	label: 'Last Name',
																			input_html: { value: ( !current_user.admin? ? current_user.last_name : '' ) }  %>
				<%= f.input :host_business, 	label: 'Business Name',
																			input_html: { rel: 'popover',
																										data: { content: "If you have a line of products or a brand for your work, include it here."} } %>
				<!--Add a host?-->
		    <br />
		    <hr />

<!--SHOW OFF A LITTLE -->
	      <h3>Show off a little</h3>

				<%= f.input :bio, input_html: { rows: "8",
																				placeholder: "Give people a sense of who they'll be working with.",
																				rel: 'popover',
																				data: { :content => "Think about including: schooling, current work, recent shows, what you’re interested in as an artist and why you’re interested in teaching it - and a bit of personality, too!" } }  %>

				<%= f.input :website, :wrapper => :prepend do  %>
					<span class="add-on">www.</span>
					<%= f.input_field :website, rel: 'popover',
																			data: { :content => "Your studio website, or any other site that shows off your work."} %>
				<% end -%>

				<%= f.input :webshop, :wrapper => :prepend do  %>
					<span class="add-on">www.</span>
					<%= f.input_field :webshop, rel: 'popover',
																			data: { :content => "Your online shop (Etsy, Big Cartel, etc.), if you have one."} %>
				<% end -%>

				<%= f.input :facebook, :wrapper => :prepend do  %>
					<span class="add-on">facebook.com/</span>
					<%= f.input_field :facebook, rel: 'popover',
																			data: { :content => "We'll link to your business facebook page, to help us promote you and your events!"} %>
				<% end -%>

				<%= f.input :twitter, :wrapper => :prepend do  %>
					<span class="add-on">@</span>
					<%= f.input_field :twitter, rel: 'popover',
																			data: { :content => "A link to your Twitter profile helps give a sense of who you are and what you're interested in."} %>
				<% end -%>

				<ul class="icons">
					<li>
						<a data-toggle="collapse" data-target="#collapseOne" >
							<i class="icon-chevron-up"></i>
						</a>
					</li>
				</ul>
			</div>
	  </div>
	</div>

	<br />

	<div class="accordion-group">
	  <div class="accordion-heading">
	  	<h2>
		    <a class="accordion-toggle" data-toggle="collapse" href="#collapseTwo">
		      2. About my workshop
		    </a>
		   </h2>
	  </div>

	  <div id="collapseTwo" class="accordion-body collapse">
	    <div class="accordion-inner">
	    	<!--<p>Give people an idea of what they'll do, what they'll learn, and what they'll take away from it.</p>-->


<!--TOPIC -->
				<h3>What</h3>

				<%= f.input :topic, input_html: { placeholder: "Ex. 'Printmaking' or 'Jewelry Design'", rel: 'popover', data: { content: 'What will you be teaching?' } }  %>

<!--DESCRIPTION -->
				<%= f.input :description, input_html: { rows: "8",
																				placeholder: "Tell us about your workshop.",
																				rel: 'popover',
																				data: { :content => "Give a few sentences telling people what they’ll be learning and doing in the workshop, what (if anything) they’ll take home from it, and why it’s fun/awesome/useful." } }  %>

<!--SKILLS & TECHNIQUES -->
				<%= f.input :skill_list, label: 'Skills & Techniques' do %>
					<%= f.text_field :skill_list, wrapper: false, data: { pre: @workshop.skills.map { |t|  { id: t.name, name: t.name } } }  %>
				<% end -%>
				<!-- Add Tooltip above - "Be as specific as possible to give your apprentice credit for her experience. We’ll keep track, to help her show off her skills!" -->

<!--TOOLS & MATERIALS -->
				<%= f.input :tool_list, label: 'Tools & Materials' do %>
					<%= f.text_field :tool_list, wrapper: false, data: { pre: @workshop.tools.map { |t|  { id: t.name, name: t.name } } }  %>
				<% end -%>
				<!-- Add Tooltip above - "Be as specific as possible to give your apprentice credit for her experience. We’ll keep track, to help her show off her skills!" -->

<!--REQUIREMENTS / PREREQUISITES -->
				<%= f.input :requirement_list, label: 'Prerequisites' do %>
					<%= f.text_field :requirement_list, wrapper: false, data: { pre: @workshop.requirements.map { |t|  { id: t.name, name: t.name } } }  %>
				<% end -%>
				<!-- Add Tooltip above - "Applicants will rate their level of experience with these skills and tools for you to see on their application." -->

				<%= f.input :other_needs, label: 'Preparations',
																			input_html: { placeholder: "Ex. 'Wear close-toed shoes' or 'Bring a camera'", rel: 'popover', data: { content: 'Participants will be reminded to bring these.' } } %>

<!--AGE -->
				<%= f.input :age_min, label: 'Age Range' do %>
					<span class="controls-row">
						<%= f.number_field :age_min, placeholder: 'Min. Age', class: "span3", rel: 'popover', data: { content: "This is entirely up to you. We suggest a minimum age of 11 because our research has shown a need for fabulous mentors before middle school. If participants need a specific skill set or level of experience you may want to set the age a bit higher." } %>
						<%= f.number_field :age_max, placeholder: 'Max. Age', class: "span3", rel: 'popover', data: { content: "If you want to work specifically with youth, you can set a maximum age accordingly. If you're happy to work with adults or seniors, you can set the maximum to 99." } %>
					</span>
				<% end -%>

<!--NUMBER OF PARTICIPANTS -->
				<%= f.input :registrations, label: 'Workshop Size' do %>
					<span class="controls-row">
						<%= f.number_field :registration_min, placeholder: 'Min. Participants', class: "span3", rel: 'popover', data: { content: "What is the minimum number of participants you need to run the workshop? If fewer than this number have signed up by the time registration closes, the workshop will be cancelled." } %>
						<%= f.number_field :registration_max, placeholder: 'Max. Participants', class: "span3", rel: 'popover', data: { content: "What is the maximum number of participants you can accommodate in the workshop? Once this many people have signed up, we will close registration for the workshop." } %>
					</span>
				<% end -%>

				<br/>
		    <hr />


<!--WHEN -->
				<h3>When</h3>
				<%= f.input :begins_at, label: 'Date' do %>
					<div class="input-append date" data-behaviour="datepicker">
						<%= f.text_field :begins_at, class: "span2", value: @workshop.begins_at.strftime("%m/%d/%Y") %>
					 	<span class="add-on"><i class="icon-th"></i></span>
					</div>
				<% end %>

				<%= f.input :begins_at_time, label: 'Time' do %>
					<div class="row datepickerlayout">
						<div class='input-append time bootstrap-timepicker-component span2'>
					  	<%= f.text_field :begins_at_time, class: "dateselect-time span2", data: { behaviour: 'timepicker', placeholder: '12:45 PM' } %>
					  	<span class='add-on'><i class='icon-time'></i></span>
						</div>

						<div class="span1 tofield"> &nbsp; &nbsp; &nbsp; to </div>

						<div class='input-append time bootstrap-timepicker-component'>
					 		<%= f.text_field :ends_at_time, class: "dateselect-time span2", data: { behaviour: 'timepicker', placeholder: '12:45 PM' } %>
					  	<span class='add-on'><i class='icon-time'></i></span>
						</div>
					</div>
				<% end -%>

				<strong class="offset2">OR</strong><br/>

				<%= f.input :datetime_tba, label: 'TBA', as: :boolean do %>
					<%= f.check_box :datetime_tba %>
					<span class="simpleform-text">I'd like to gauge interest by gathering pre-registrations before I set a date.</span>
				<% end -%>
		    <hr />


<!--LOCATION -->
				<h3>Where</h3>
				<%= f.input :location_address, label: "Address" do %>
					<span class="controls controls-row">
						<%= f.text_field :location_address, class: "span6", placeholder: 'Address Line 1', rel: 'popover', data: { content: "Where will the workshop take place? Please give the exact address. If it’s your home we’ll show only the neighborhood on the public listing, and send the address to participants when they sign up." } %>
					</span>
					<span class="controls controls-row">
						<%= f.text_field :location_address2, class: "span6", placeholder: 'Address Line 2' %>
					</span>
					<span class="controls controls-row">
						<%= f.text_field :location_city, placeholder: 'City', class: "span3" %>
						<%= f.text_field :location_state, placeholder: 'State', class: "span1" %>
						<%= f.text_field :location_zipcode, placeholder: 'Zip', class: "span2" %>
					</span>
				<% end -%>
				<br />

				<%= f.input :location_private do %>
					<%= f.check_box :location_private, value: true %>
					<span class="simpleform-text">This is a private address in the </span>
					<%= f.text_field :location_nbrhood, :placeholder => 'Ex. Clarksville', :class => 'span2' %>
					<span class="simpleform-text"> neighborhood.</span>
				<% end -%>
		    <hr />


<!--COST -->
				<h3>Cost</h3>
				<%= f.input :price, label: "Cost" do %>
					<div class="input-prepend input-append">
						<span class="add-on">$</span>
						<%= f.text_field :price, class: "span3", rel: 'popover', data: { content: "Please list the amount per girl that you want to earn from teaching this session (remember to account for materials). We’ll add 20% on top of that to set the full fee each girl will pay. See our FAQ page for details and examples of our cost structure."} %>
					</div>
				<% end %>

				<%= f.input :ends_at, label: "Close signups on" do %>
					<div class="input-append date" data-behaviour="datepicker">
					  <%= f.text_field :ends_at, class: "span3", value: @workshop.ends_at.strftime("%m/%d/%Y") %>
					 	<span class="add-on"><i class="icon-th"></i></span>
					</div>
				<% end %>
				<br/>

				<ul class="icons">
					<li>
						<a data-toggle="collapse" data-target="#collapseTwo" >
							<i class="icon-chevron-up"></i>
						</a>
					</li>
				</ul>

			</div>
	  </div>
	</div>

	<br />

	<div class="accordion-group">
	  <div class="accordion-heading">
	  	<h2>
		    <a class="accordion-toggle" data-toggle="collapse" href="#collapseThree">
		      3. One last bit
		    </a>
		  </h2>
	  </div>

	  <div id="collapseThree" class="accordion-body collapse">
	    <div class="accordion-inner">
	    	<div class="alert alert-info">
	    		Note, this information will be kept private and will not be displayed with your workshop
	    	</div>

<!--PAYMENT OPTIONS -->
				<h3>After the workshop, we'll send your payment by:</h3>
				<%= f.input :payment_options, label: "Choose an option:" do %>
					<%= f.radio_button :payment_options, "Paypal" %>
					<span class="simpleform-text">Paypal payment to</span>
					<%= f.text_field :paypal_email, value: "#{current_user.email}", class: 'span3' %>
					<br />
					<br />
					<%= f.radio_button :payment_options, "Check" %>
					<span class="simpleform-text">Check mailed to</span>
					<span class="controls controls-row">
						<%= f.text_field :sendcheck_address, class: "span6", placeholder: 'Address Line 1' %>
					</span>
					<span class="controls controls-row">
						<%= f.text_field :sendcheck_address2, class: "span6", placeholder: 'Address Line 2' %>
					</span>
					<span class="controls controls-row">
						<%= f.text_field :sendcheck_city, :placeholder => 'City', :class => "span3" %>
						<%= f.text_field :sendcheck_state, :placeholder => 'State', :class => "span1" %>
						<%= f.text_field :sendcheck_zip, :placeholder => 'Zip', :class => "span2" %>
					</span>
				<% end %>

				<hr/>

<!--BACKGROUND CHECK -->
				<h3>Background check</h3>
				<%= f.input :permission, label: 'Yes' do %>
					<%= f.check_box :permission %>
					<span class="simpleform-text"> I give permission for GirlsGuild to run a background check on me.</span>
						<a href="javascript:;" rel='popover' data-placement="right" data-content="We run background checks on all maker-mentors as part of our efforts to foster a safe community.">
						  <i class="icon-question-sign small-icon"></i>
						</a>
				<% end -%>

				<br/>
				<hr/>
				<br/>

		    <%= f.submit "Create Workshop", :name => 'create_button', :class => "btn btn-primary btn-large btn-create" %>

				<ul class="icons">
					<li>
						<a data-toggle="collapse" data-target="#collapseThree" >
							<i class="icon-chevron-up"></i>
						</a>
					</li>
				</ul>

	  	</div>
	  </div>
	</div>
</div>



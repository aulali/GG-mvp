- action = {}
- action[params[:action].to_sym] = true
- checkmarks = @workshop.checkmarks
#top-buttons
  %ul.nav.nav-pills
    %li{class: action[:edit] ? 'active' : ''}
      .number-circle
        %i#checkmark-design.fa-check.fa-2x{ class: checkmarks[:design] ? "" : "hidden"}
        #number-design.number-text{ class: !checkmarks[:design] ? "" : "hidden"}
          1
      = link_to "Public Posting", checkmarks[:design] ? edit_workshop_path(@workshop) : '#'
    %li{class: action[:private] ? 'active' : ''}
      .number-circle
        %i#checkmark-private.fa-check.fa-2x{ class: checkmarks[:private] ? "" : "hidden"}
        #number-private.number-text{ class: !checkmarks[:private] ? "" : "hidden"}
          2
      = link_to "Private Details", checkmarks[:private] ? private_workshop_path(@workshop) : '#'
#checkmarks-url.hidden{ data: { url: "#{checkmarks_workshops_path}", id: "#{@workshop.id}" } }
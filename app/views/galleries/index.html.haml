%h1 Gallerys
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Created at
      %th Actions
  %tbody
    %tr
      %td= @gallery.id
      %td= link_to "Gallery", user_gallery_path(@user, @gallery)
      %td= @gallery.created_at
      %td
        = link_to "Show", user_gallery_path(@user, @gallery), :class => 'btn btn-mini'
        = link_to "Edit", edit_user_gallery_path(@user, @gallery), :class => 'btn btn-mini'
        = link_to "Destroy", user_gallery_path(@user, @gallery), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn btn-mini btn-danger'

= simple_form_for @gallery, :url => user_path(@gallery), :as => :user, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend
      = controller.action_name.capitalize
      Gallery

    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to "Cancel", galleries_path, :class => 'btn'
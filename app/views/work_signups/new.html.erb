<%= content_tag :section, :class => "section alt" do %>
	<%= content_tag :div, :class => "container" do %>
		<% provide(:title, 'Sign Up for a Workshop') %>

		<h1>Workshop Signup</h1>
		<p>Yes! We’re excited you want to work with <%= "#{@workshop.host_firstname}" %>! <br/>When you sign up, we’ll send you an email to give you all the details, including the exact address.</p>
		<br/>
		<!--
		<div class="howitworks">
      <%= render 'howitworks' %>
    </div>-->

    <div class="row-fluid">
			<div class="span9">
				<%= simple_form_for @work_signup, class: 'form-horizontal', html: {class: "payment_form"}, :validate => true, defaults: { input_html: { class: 'span6' } } do |f| %>
		    	<%= render "form", f: f %>
					<%= f.submit "Sign me up!", :name => 'create_button', :class => "btn btn-large btn-primary", :id => @work_signup.charge_id.present? ? "" : "cc_process" %>
				<% end %>
			</div>

			<div class="span3 accordionFAQ">
	      <%= render 'faq' %>
	    </div>
	  </div>

	<% end %>
<% end %>
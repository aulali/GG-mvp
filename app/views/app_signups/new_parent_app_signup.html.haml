= content_tag :section, class: "section alt-grey", id: 'apply' do
  = content_tag :div, class: "container" do
    - provide(:title, 'Apply for an Apprenticeship')
    %h1 Apprenticeship Application
    %p
      Yes! Weâ€™re excited your daughter wants to work with #{"#{@apprenticeship.host_firstname}"} for her apprenticeship in #{link_to @app_signup.event.topic}!
    %br/
    .howitworks
      = render 'howitworks'
    .row-fluid
      .span9
        = simple_form_for @app_signup, class: 'form-horizontal', html: {class: "payment_form"}, :validate => false, defaults: { input_html: { class: 'span6' } }  do |f|
          = render 'parent_form', f: f
          = f.submit "Save for Later", name: 'save_button', class: "btn"
          = f.submit "Submit Application", name: 'create_parent_button', class: "btn btn-primary"
      .span3.accordionFAQ
        = render 'faq'
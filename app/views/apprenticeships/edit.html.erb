<%= content_tag :section, :class => "section" do %>
  <%= content_tag :div, :class => "container" do %>
      <% provide(:title, "Edit Apprenticeship") %> 
      <h1>Update your apprenticeship</h1>

      <div class="row">
        <div class="span6">
          <%= form_for(@apprenticeship) do |f| %>
          
            <%= render 'fields', f: f %>
        
            <% if @apprenticeship.started? %>
              <%= link_to 'Delete', @apprenticeship, :method => :delete, :data => { :confirm => 'Are you sure you want to delete this apprenticeship?' } %>
              <%= f.submit "Save for Later", :name => "save_button", :class => "btn btn-large" %>
              <%= f.submit "Create Apprenticeship", :name => "create_button", :class => "btn btn-large btn-primary", :id => "cc_process" %>

            <% elsif @apprenticeship.accepted? && @apprenticeship.user == current_user %>
              <%= f.submit "Cancel Apprenticeship", :name => "cancel_button", :class => "btn btn-small btn-danger", :data => { :confirm => "Are you sure you want to cancel this apprenticeship? It will be closed for application and moved under My Canceled Apprenticeships. You will still be able to edit and resubmit it."} %>
              <%= f.submit "Resubmit Apprenticeship", :name => "resubmit_button", :class => "btn btn-large btn-primary" %>

            <% elsif @apprenticeship.canceled? %>
              <%= link_to 'Delete', @apprenticeship, :method => :delete, :data => { :confirm => 'Are you sure you want to delete this apprenticeship?' } %>          
              <%= f.submit "Resubmit Workshop", :name => "resubmit_button", :class => "btn btn-large btn-primary" %> 

            <% else %>
              <%= f.submit "Cancel Apprenticeship", :name => "cancel_button", :class => "btn btn-small btn-danger", :data => { :confirm => "Are you sure you want to cancel this apprenticeship? It will be closed for application and moved under My Canceled Apprenticeships. You will still be able to edit and resubmit it."} %>            
            <% end %>
            
            <% if current_user.admin? && @apprenticeship.pending? %>
            <hr />
            <h3>Admin Controls</h3>            
              <%= f.submit "Reject Apprenticeship", :name => "reject_button", :class => "btn btn-large btn-danger" %>
              <%= f.submit "Approve Apprenticeship", :name => "accept_button", :class => "btn btn-large btn-success" %>
            <% end %>

            <% if current_user.admin? && @apprenticeship.accepted? %> 
            <hr />
            <h3>Admin Controls</h3>                      
              <%= f.submit "Revoke Apprenticeship", :name => "revoke_button", :class => "btn btn-large btn-danger" %>
              <%= link_to 'Delete', @apprenticeship, :method => :delete, :data => { :confirm => 'Are you sure you want to delete this apprenticeship?' } %>              
            <% end %>
            
          <% end %>
        </div>
      </div>
  <% end %>
<% end %>

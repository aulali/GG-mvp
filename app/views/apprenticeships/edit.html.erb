<%= content_tag :section, :class => "section" do %>
  <%= content_tag :div, :class => "container" do %>

    <% provide(:title, "Edit Apprenticeship") %>

    <%= render 'albums/show', :@album => @apprenticeship.host_album %>

    <h1>Update your apprenticeship</h1>

    <div class="row">
      <div class="span9">
        <%= simple_form_for @apprenticeship, html: {class: "payment_form"}  do |f| %>

          <%= render 'fields', f: f %>

          <% if @apprenticeship.started? %>
            <%= link_to 'Delete', @apprenticeship, :method => :delete, :data => { :confirm => 'Are you sure you want to delete this apprenticeship?' }, :class => "btn btn-small btn-danger" %>
            <%= f.submit "Save for Later", :name => "save_button", :class => "btn" %>
            <%= f.submit "Create Apprenticeship", :name => "create_button", :class => "btn btn-primary", :id => "cc_process" %>

          <% elsif @apprenticeship.accepted? && @apprenticeship.user == current_user %>
            <%= f.submit "Cancel Apprenticeship", :name => "cancel_button", :class => "btn btn-danger", :data => { :confirm => "Are you sure you want to cancel this apprenticeship? It will be closed for application and moved under My Canceled Apprenticeships. You will still be able to edit and resubmit it."} %>
            <%= f.submit "Resubmit Apprenticeship", :name => "resubmit_button", :class => "btn btn-primary" %>

          <% elsif @apprenticeship.canceled? %>
            <%= link_to 'Delete', @apprenticeship, :method => :delete, :data => { :confirm => 'Are you sure you want to delete this apprenticeship?' }, :class => "btn btn-small btn-danger" %>
            <%= f.submit "Resubmit Workshop", :name => "resubmit_button", :class => "btn btn-primary" %>

          <% else %>
            <%= f.submit "Cancel Apprenticeship", :name => "cancel_button", :class => "btn btn-small btn-danger", :data => { :confirm => "Are you sure you want to cancel this apprenticeship? It will be closed for application and moved under My Canceled Apprenticeships. You will still be able to edit and resubmit it."} %>
          <% end %>

        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

<%= content_tag :section, class: "section alt" do %>
	<%= content_tag :div, class: "container" do %>
		<% provide(:title, 'New Apprenticeship') %>

		<h1>Apprenticeship Builder</h1>
		<br />

		<div class="howitworks">
      <%= render 'howitworks' %>
    </div>

    <div class="span3 pull-left accordionFAQ">
      <%= render 'faq' %>
    </div>

	  <div class="span9 pull-right">
	    <%= simple_form_for @apprenticeship, class: 'form-horizontal', html: {class: "payment_form"},defaults: { input_html: { class: 'span6' } } do |f| %>
	    	<%= render 'fields', f: f %>
	      <%= f.submit "Save for Later", name: 'save_button', class: "btn btn-large pull-right" %>
	      <%= f.submit "Create Apprenticeship", name: 'create_button', class: "btn btn-large btn-primary btn-create", id: "cc_process" %>
	    <% end %>
		</div>
	<% end %>
<% end %>

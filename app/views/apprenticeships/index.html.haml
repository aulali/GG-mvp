          %h4 My Filled apprenticeships
          .row
            = render :partial => "apprenticeship", :collection => @myfilled_apprenticeships
        - unless @mycompleted_apprenticeships.blank?
          %h4 My Completed apprenticeships
          .row
            = render :partial => "apprenticeship", :collection => @mycompleted_apprenticeships
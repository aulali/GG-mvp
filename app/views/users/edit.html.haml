= provide(:title, "Edit user")

%section.section{id: 'promo'}
	.container
		%h1 Update your profile
		.row
			.span6.fancyform
				= simple_form_for @user, :validate => true, :defaults => {:input_html => { :class => 'span6'}} do |f|
					%label Change Your Avatar
					.form-inline
						%input{id: 'user_use_gravatar_true',name: "user[use_gravatar]", type: 'radio', value: 'true', :checked => (@user.use_gravatar ? "checked" : false) }
						%label.collection_radio_buttons{:for => 'user_use_gravatar_true'} Use Gravitar
					.form-inline
						= gravatar_for(@user)
						%a{href: 'http://gravatar.com/emails'} change
					%br
					.form-inline
						%input{id: 'user_use_gravatar_false',name: "user[use_gravatar]", type: 'radio', value: 'false',  :checked => (!@user.use_gravatar ? "checked" : false) }
						%label.collection_radio_buttons{:for => 'user_use_gravatar_false'} Upload an Avatar
					.form-inline
						= image_tag(@user.avatar.url(:thumb))
						= f.file_field(:avatar)
					%br
					= render 'fields', f: f
					= f.submit "Save changes", class: "btn btn-large btn-primary"

